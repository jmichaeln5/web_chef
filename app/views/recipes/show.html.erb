<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @recipe.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @recipe.description %>
</p>

<h3> Ingredients </h3>
<p>
  <% for @ingredient in @recipe.ingredients %>
    <ul>
      <li>
        <%= @ingredient.content %>
      </li>
    </ul>
  <% end %>

</p>



<%= link_to 'Edit', edit_recipe_path(@recipe) %> |
<%= link_to 'Back', recipes_path %>
