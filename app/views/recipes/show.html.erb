<p id="notice"><%= notice %></p>

<h1>Recipe </h1>

<p>
  <% if @recipe.image.url %>
  <%= image_tag @recipe.image.url, class: "recipe-show" %>
  <% end %>

</p>


<p>
  <strong>Title:</strong>
  <%= @recipe.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @recipe.description %>
</p>


<h3> Ingredients </h3>
<ul>
  <% for @ingredient in @recipe.ingredients %>
      <li>
        <%= @ingredient.content %>
      </li>
  <% end %>
</ul>


<h3> Steps </h3>
<ol>
  <% for @step in @recipe.steps %>
      <li>
        <%= @step.direction %>
      </li>
  <% end %>
</ol>

<hr>
<div class="text-center">
  <%= link_to 'Edit', edit_recipe_path(@recipe), class: "btn btn-default btn-lg"%>
</div>
<hr>

<br>

<%= link_to 'Back', recipes_path, class: "btn btn-primary btn-block btn-lg" %>

